<header>
  <nav>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to 'Vets', vets_path %></li>
      <li><%= link_to 'Dog Breeds', dog_breeds_path %></li>
    </ul>
  </nav>
</header>

<div class="container">
  <div class="header">
    <h1 style="font-size: 32px; color: #007bff">Here are the List of breeds we specialize in!</h1>
  </div>

  <div class="search-form">
    <%= form_with(url: dog_breeds_path, method: 'get') do %>
      <%= text_field_tag :query, params[:query], class: 'search-input', placeholder: 'Search' %>
      <%= submit_tag 'Search', class: 'search-button' %>
    <% end %>
  </div>

  <table class="breeds-table">
    <tr>
      <th>Name</th>
    </tr>

    <% @dog_breeds.each do |dog_breed| %>
      <tr>
        <td><%= dog_breed.name %></td>
      </tr>
    <% end %>
  </table>

  <div class="pagination">
    <%= will_paginate @dog_breeds %>
  </div>
</div>
